@model UserRegisterRequestModel

<div class="container">
    <div class="text-center">
        <h1>Register Page</h1>
    </div>
    <form asp-action="Register" asp-controller="Home" method="post" class="p-3 w-25 m-auto">
        <div class="mb-2">
            <label>Username</label> 
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control"/>
        </div>
        <div class="mb-2">
            <label>Password</label> 
            <span asp-validation-for="Password" class="text-danger"></span>
            <input asp-for="Password" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Confirm Password</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input asp-for="ConfirmPassword" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="mb-2">
            <label>Confirm Email</label>
            <span asp-validation-for="ConfirmEmail" class="text-danger"></span>
            <input asp-for="ConfirmEmail" class="form-control" />
        </div>
        <div class="mb-2">
            <button class="btn btn-primary">Register</button>
        </div>
    </form>
</div>
