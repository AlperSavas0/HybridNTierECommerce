@model CartPageVM

<div class="jumbotron">
    Total Price = @Model.TotalPrice
    <br />
    <a asp-action="ConfirmOrder" asp-controller="Shopping" class="btn btn-primary">Click here to pay</a>

</div>

    <div class="row product-list">

        @foreach (CartItem item in Model.CartItems)
        {
        <div class="col-md-3">
                <section class="panel">
                    <div class="pro-img-box" >
                        <img src="@item.ImagePath" />
                        <a asp-action="DeleteFromCart" asp-route-id="@item.ID" class="adtocart">
                            <i class="glyphicon glyphicon-remove"></i>
                        </a>
                    </div>
                    <div class="panel-body text-center">
                        <h4>
                            <a asp-action="Index" asp-route-categoryID="@item.CategoryID" class="pro-title" title="Click to see @item.CategoryName items">
                                @item.ProductName x @item.Amount
                            </a>
                        </h4>
                        <p class="prive">$@item.UnitPrice</p>
                        <a asp-action="DecreaseFromCart" asp-route-id="@item.ID">
                            <i class="glyphicon glyphicon-minus"></i>
                        </a>
                    </div>
                </section>
            </div>

        }
    </div>

